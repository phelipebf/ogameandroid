<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
      
        
    <ImageView
        android:background="@null"
        android:id="@+id/image"
        android:src="@drawable/supply2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content" android:layout_height="fill_parent" android:paddingRight="5dp"/>    
        
    <TextView
        android:id="@+id/name"
        android:text="Kristallmine (Stufe 3)"
        android:textColor="#efefef"
        android:textStyle="bold"
        android:layout_toRightOf="@id/image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
      
   <ImageView
   		android:id="@+id/image_metall"
        android:src="@drawable/ressourcen_metall"
        android:layout_below="@id/name" 
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_height="wrap_content" />
        
    
    
    <TextView
        android:id="@+id/metall"
        android:textColor="#00ff00"
        android:text="200"
        android:layout_below="@id/name" 
        android:layout_toRightOf="@id/image_metall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="2dp" android:paddingLeft="1dp" android:gravity="center_vertical"/>
        
    <ImageView
   		android:id="@+id/image_kristal"
        android:src="@drawable/ressourcen_kristal"
        android:layout_below="@id/name" 
        android:layout_toRightOf="@id/metall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        
    <TextView
        android:id="@+id/kristal"
        android:textColor="#00ff00"
        android:text="200"
        android:layout_below="@id/name" 
        android:layout_toRightOf="@id/image_kristal"
        android:paddingRight="2dp"
        android:paddingLeft="1dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    
    <ImageView
   		android:id="@+id/image_deuterium"
        android:src="@drawable/ressourcen_deuterium"
        android:layout_below="@id/name" 
        android:layout_toRightOf="@id/kristal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        
    <TextView
        android:id="@+id/deuterium"
        android:textColor="#00ff00"
        android:text="200"
        android:layout_below="@id/name" 
        android:layout_toRightOf="@id/image_deuterium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="2dp"
        android:paddingLeft="1dp" />
        
     <ImageView
        android:layout_height="wrap_content"
        android:id="@+id/image_energy"
        android:src="@drawable/ressourcen_energie"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/deuterium"
        android:layout_below="@id/name"/>
        
	<TextView android:id="@+id/energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="2dp"
        android:paddingLeft="1dp" 
        android:textColor="#00ff00"
        android:text="200"
		android:layout_toRightOf="@+id/image_energy"
        android:layout_below="@id/name"/>
        
   <ImageView
        android:layout_height="wrap_content"
        android:id="@+id/image_percent"
        android:src="@drawable/ressourcen_percent"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/energy"
        android:layout_below="@id/name"/>
        
	<TextView android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="2dp"
        android:paddingLeft="1dp" 
        android:textColor="#00ff00"
        android:text="200"
		android:layout_toRightOf="@+id/image_percent"
        android:layout_below="@id/name"/>
        
        <ImageView
   		android:id="@+id/wrench"
        android:src="@drawable/wrench"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>



</RelativeLayout>